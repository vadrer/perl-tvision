    TStatusItem
    TCheckBoxes
    TRadioButtons
    TScroller
    TScrollBar
    TIndicator
    TEditor
    TDialog
    TScreen
    TSItem
    TMenuItem
    TMenuBar
    TSubMenu
    TValidator
);

=comment

    TEvent
    TKeys
    MsgBox
    TObject
    TRect

O_TObject
  $var= tvision_info_from_magic($arg, OR_DIE)->tobj;
O_TButton
  $var= dynamic_cast<TButton*>(tvision_info_from_magic($arg, OR_DIE)->tobj);
  if (!$var) croak(\"Not an instance of TButton\");
=cut
''}}}
TYPEMAP
{{{
join '', map {"$_*  O_$_\n"} @tclasses;
}}}

INPUT
{{{
join '', map {<<"EOS"} @tclasses;
O_$_
  \$var = ($_*)sv2tv_a(\$arg);
EOS
}}}

